<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/ll_input_pwd"
    android:background="@drawable/shape_employ_button"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:padding="10dp"
        android:text="URL地址"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_input_url"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="20dp"
        android:hint="请输入URL"
        android:textSize="24dp"
        android:background="@drawable/line_net_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_input_confirm"
        android:textColor="@color/white"
        android:background="@drawable/selector_btn_blue_rect"
        android:layout_marginTop="30dp"
        android:text="确定"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="65dp" />
</LinearLayout>